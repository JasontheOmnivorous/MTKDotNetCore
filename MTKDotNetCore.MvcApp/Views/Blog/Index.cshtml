@{ /* catch the passed data object from BlogController */ }
@model List<BlogModel>

@{
    ViewData["Title"] = "Blog";
    int count = 0;
}

<h2>Blog List</h2>

<div>total blogs: @Model.Count</div>

<a href="/Blog/Create" class="btn btn-success">Add new blog</a>

<table class="table table-responsive">
    <thead>
        <tr>
            <th></th>
            <th>Number</th>
            <th>Title</th>
            <th>Author</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody>
        @foreach (BlogModel item in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-warning" href="/Blog/Edit/@item.BlogId">
                        Edit
                    </a>
                    <a class="btn btn-danger" href="/Blog/Delete/@item.BlogId">
                        Delete
                    </a>
                </td>
                <td>@(++count)</td>
                <td>@item.BlogTitle</td>
                <td>@item.BlogAuthor</td>
                <td>@item.BlogContent</td>
            </tr>
        }
    </tbody>
</table>